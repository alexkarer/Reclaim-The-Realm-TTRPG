                "bulletPoints": null,
                "ability": null
            },
            {
                "regularText": null,
                "headerLine": null,
                "bulletPoints": [
                    "AD = Any Aether Dice",
                    "AD(1) = Aether Dice with a value of 1",
                    "AD(4+) = Aether Dice with a value of 4 or higher (4-6)",
                    "AD(3-) = Aether Dice with a value of 3 or lower (1-3)"
                ],
                "ability": null
            },
            {
                "regularText": null,
                "headerLine": "Tides of the Aether Improvments",
                "bulletPoints": null,
                "ability": null
