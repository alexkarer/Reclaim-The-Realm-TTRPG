{
  "name": "reclaim-the-realm",
  "version": "3.0.0",
  "description": "CSS compiler for the RtR system",
  "scripts": {
    "build": "npm run build:css && npm run build:pack",
    "watch": "sass src/scss/reclaim-the-realm.scss css/reclaim-the-realm.css --style=expanded --source-map --watch",
    "build:css": "sass src/scss/reclaim-the-realm.scss css/reclaim-the-realm.css --style=expanded --no-source-map",

    "build:pack": "npm run build:packclasstechniques && npm run build:packcoreabilities && npm run build:packequipment && npm run build:packmartialmaneuvers && npm run build:packnpcs && npm run build:packperks && npm run build:packspells && npm run build:packspecies && npm run build:packclasses && npm run build:packgmtables && npm run build:packplayertables",
    "build:packclasstechniques": "fvtt package pack \"classTechniques\" --in \"./packs/_source/classTechnique\"",
    "build:packcoreabilities": "fvtt package pack \"coreAbilities\" --in \"./packs/_source/coreAbilities\"",
    "build:packequipment": "fvtt package pack \"equipment\" --in \"./packs/_source/equipment\"",
    "build:packmartialmaneuvers": "fvtt package pack \"martial_maneuvers\" --in \"./packs/_source/martial_maneuvers\"",
    "build:packnpcs": "fvtt package pack \"npcs\" --in \"./packs/_source/npcs\"",
    "build:packperks": "fvtt package pack \"perks\" --in \"./packs/_source/perks\"",
    "build:packspells": "fvtt package pack \"spells\" --in \"./packs/_source/spells\"",
    "build:packspecies": "fvtt package pack \"species\" --in \"./packs/_source/species\"",
    "build:packclasses": "fvtt package pack \"classes\" --in \"./packs/_source/classes\"",
    "build:packgmtables": "fvtt package pack \"gm-tables\" --in \"./packs/_source/gm-tables\"",
    "build:packplayertables": "fvtt package pack \"player-tables\" --in \"./packs/_source/player-tables\"",

    "build:unpack": "npm run build:unpackclasstechniques && npm run build:unpackcoreabilities && npm run build:unpackequipment && npm run build:unpackmartialmaneuvers && npm run build:unpacknpcs && npm run build:unpackperks && npm run build:unpackspells && npm run build:unpackspecies && npm run build:unpackclasses && npm run build:unpackgmtables && npm run build:unpackplayertables",
    "build:unpackclasstechniques": "fvtt package unpack \"classTechniques\" --out \"./packs/_source/classTechnique\"",
    "build:unpackcoreabilities": "fvtt package unpack \"coreAbilities\" --out \"./packs/_source/coreAbilities\"",
    "build:unpackequipment": "fvtt package unpack \"equipment\" --out \"./packs/_source/equipment\"",
    "build:unpackmartialmaneuvers": "fvtt package unpack \"martial_maneuvers\" --out \"./packs/_source/martial_maneuvers\"",
    "build:unpacknpcs": "fvtt package unpack \"npcs\" --out \"./packs/_source/npcs\"",
    "build:unpackperks": "fvtt package unpack \"perks\" --out \"./packs/_source/perks\"",
    "build:unpackspells": "fvtt package unpack \"spells\" --out \"./packs/_source/spells\"",
    "build:unpackspecies": "fvtt package unpack \"species\" --out \"./packs/_source/species\"",
    "build:unpackclasses": "fvtt package unpack \"classes\" --out \"./packs/_source/classes\"",
    "build:unpackgmtables": "fvtt package unpack \"gm-tables\" --out \"./packs/_source/gm-tables\"",
    "build:unpackplayertables": "fvtt package unpack \"player-tables\" --out \"./packs/_source/player-tables\"",

    "createsymlink": "node ./scripts/create-symlinks.mjs",
    "postinstall": "npm run build:css && npm run build:pack"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Asacolips",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.1.0",
    "sass": "^1.53.0"
  }
}
