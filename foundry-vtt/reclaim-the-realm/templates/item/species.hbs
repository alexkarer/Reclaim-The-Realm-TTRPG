{{! Species Tab }}
<section class='tab attributes {{tab.cssClass}}' data-group='primary' data-tab='species'>
    <div class="compact-grid grid-3col">
        <span>{{localize 'RTR.Item.Species.FIELDS.size.label'}}</span>
        <input class="compact-input grid-span-2" type='text' name='system.physicalCharacteristics.size' value='{{system.physicalCharacteristics.size}}' data-dtype='text'/>

        <span>{{localize 'RTR.Item.Species.FIELDS.height.label'}}</span>
        <input class="compact-input grid-span-2" type='text' name='system.physicalCharacteristics.height' value='{{system.physicalCharacteristics.height}}' data-dtype='text'/>

        <span>{{localize 'RTR.Item.Species.FIELDS.weight.label'}}</span>
        <input class="compact-input grid-span-2" type='text' name='system.physicalCharacteristics.weight' value='{{system.physicalCharacteristics.weight}}' data-dtype='text'/>
    </div>
    <h6 style="margin-top: 5px;">Description</h6>
    {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
    {{#if editable}}
    <prose-mirror style="min-height: 250px;" name="system.description" data-document-u-u-i-d="{{item.uuid}}"
        value="{{system.description}}" collaborate="true" toggled="true">
        {{{enrichedDescription}}}
    </prose-mirror>
    {{else}} {{{enrichedDescription}}}
    {{/if}}
</section>