{{! Perk Tab }}
<section class='tab attributes {{tab.cssClass}}' data-group='primary' data-tab='perk'>
    <h6 style="margin-top: 5px;">Description</h6>
    {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
    {{#if editable}}
    <prose-mirror style="height: 150px;" name="system.description" data-document-u-u-i-d="{{item.uuid}}"
        value="{{system.description}}" collaborate="true" toggled="true">
        {{{enrichedDescription}}}
    </prose-mirror>
    {{else}} {{{enrichedDescription}}}
    {{/if}}
</section>