{{! Description Tab }}
<section
  class='tab {{tab.cssClass}}'
  data-group='primary'
  data-tab='classcorefeature'
>
  {{! Editors must receive enriched text data from getData to properly handle rolls, UUID links, etc. }}
  <h4 style="margin-top: 10px;">{{ localize 'RTR.Item.Class.FIELDS.classCoreFeature.label' }}: {{ system.classCoreFeatureName }}</h5>
  {{#if editable}} 
    <prose-mirror name="system.description" style="min-height: 400px;" data-document-u-u-i-d="{{item.uuid}}" value="{{system.description}}" collaborate="true" toggled="true">
      {{{enrichedDescription}}}
    </prose-mirror>
  {{else}} {{{enrichedDescription}}}
  {{/if}}
</section>