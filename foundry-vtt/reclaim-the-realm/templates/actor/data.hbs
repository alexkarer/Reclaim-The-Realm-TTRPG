        </div>

        {{#if (eq @root.actor.type 'character')}}
        <div>
          <label for="system.exhaustion">Exhuastion:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.exhaustion' name='system.exhaustion' value='{{system.exhaustion}}'/>
        </div>
        <div>
          <label for="system.skillPoints.skillPointsPerLevel">Skill Points per Level:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.skillPoints.skillPointsPerLevel' name='system.skillPoints.skillPointsPerLevel' value='{{system.skillPoints.skillPointsPerLevel}}'/>
        </div>
        <div >
