        </div>
        <div >
          <label for="system.martialDamage.attr">MartialDmg Attr.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='text' id='system.martialDamage.attr' name='system.martialDamage.attr' value='{{system.martialDamage.attr}}'/>
        </div>
        <div >
          <label for="system.martialDamage.penalty">MartialDmg Penalty:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='text' id='system.martialDamage.penalty' name='system.martialDamage.penalty' value='{{system.martialDamage.penalty}}'/>
        </div>
        {{/if}}
      </div>
    </aside>

  </section>
</section>