{{! Data Tab }}
<section class='tab data {{tab.cssClass}}' data-group='primary' data-tab='data'>

  <section class='grid grid-2col data-container'>

    <aside class='sidebar'>
      <div class='flexrow flex-between'>
        <h5>Attributes</h5>
        {{#if (eq @root.actor.type 'character')}}
        <div class="flex-group-center">
            {{#unless system.editLockers.dataEditLocked}}
            <input class="reset-attributes-btn" type="button" data-action='resetAttributes' value='Reset Attributes'/>
            {{/unless}}
        </div>
        {{/if}}
      </div>

      {{#if (eq @root.actor.type 'character')}}
      <div class='flexrow flex-between'>
        <h6>Attribute Points</h6>
        <h6 class="attribute-points">{{ subtract system.attributePoints.totalAttributePoints
          system.attributePoints.usedAttributePoints }}</h6>
      </div>
      {{/if}}

      <div class='attributes grid grid-2col'>
      {{#each system.attributes as |attribute key|}}
        <a 
          class='bold-text align-left {{#if attribute.classAttribute}} class-attribute {{/if}}'
          {{#if attribute.classAttribute}}
            name='system.attributes.{{key}}.unSetClassAttribute'
            title="{{localize 'RTR.Actor.Character.TOOLTIPS.unSetAsClassAttribute.label'}}"
            {{#if (eq @root.actor.type 'character')}} data-action='unSetClassAttribute' {{/if}}
          {{else}}
            name='system.attributes.{{key}}.setClassAttribute'
            title="{{localize 'RTR.Actor.Character.TOOLTIPS.setAsClassAttribute.label'}}"
            {{#if (eq @root.actor.type 'character')}} data-action='setClassAttribute' {{/if}}
          {{/if}}
          {{disabled @root.system.editLockers.dataEditLocked}}
        >
          {{localize (lookup @root.config.attributes key)}}
        </a>
        <div class="flexrow">
          {{#if (eq @root.actor.type 'character')}}
            <input 
              type='text'
              name='system.attributes.{{key}}.value'
              style="flex-grow: 5;"
              value='{{concat attribute.value "/" attribute.attributeMaximum}}'
              disabled='true'
              data-dtype='Number'
            />
            {{#unless @root.system.editLockers.dataEditLocked}}
              <input 
                type="button"
                value="+"
                class="increase-attribute-btn"
                {{disabled (eq attribute.value attribute.attributeMaximum)}}
                {{disabled (eq (subtract @root.actor.system.attributePoints.totalAttributePoints @root.actor.system.attributePoints.usedAttributePoints) 0)}}
                name='system.attribute.{{key}}.value'
                data-action='increaseAttribute'
              />
            {{/unless}}
          {{/if}}
          {{#if (eq @root.actor.type 'npc')}}
            <input 
              type='number'
              name='system.attributes.{{key}}.value'
              value='{{attribute.value}}'
              data-dtype='Number'
            />
          {{/if}}
        </div>
      {{/each}}
      </div>

      {{#if (eq @root.actor.type 'character')}}
        <h6>{{localize "TYPES.Item.species"}}</h6>
        {{#if (exists species)}}
        <div class="class-species-container flexrow" data-item-id='{{species._id}}' data-drag='true' data-document-class='Item'>
            <div class='item-image'>
              <a class='rollable' data-action='viewDoc'>
                  <img src='{{species.img}}' title='{{species.name}}' width='24' height='24' />
              </a>
            </div>
            <span class='class-species-text rollable' data-action='viewDoc'>{{species.name}}</span>
            {{#unless system.editLockers.dataEditLocked}}
              <a class='align-self-right item-control item-delete' title='{{localize "DOCUMENT.Delete" type='species'}}'
                  data-action='deleteDoc'>
                  <i class='fas fa-trash'></i>
              </a>
            {{/unless}}
        </div>
        {{else}}
        <span>No Species Set!</span>
        {{/if}}

        <h6 style="margin-top: 5px;">{{localize "TYPES.Item.class"}}</h6>
        {{#if (exists playerClass)}}
        <div class="class-species-container flexrow" data-item-id='{{playerClass._id}}' data-drag='true' data-document-class='Item'>
            <div class='item-image'>
              <a class='rollable' data-action='viewDoc'>
                  <img src='{{playerClass.img}}' title='{{playerClass.name}}' width='24' height='24' />
              </a>
            </div>
            <span class='class-species-text rollable' data-action='viewDoc'>{{playerClass.name}}</span>
            {{#unless system.editLockers.dataEditLocked}}
              <a class='align-self-right item-control item-delete' title='{{localize "DOCUMENT.Delete" type='playerClass'}}'
                  data-action='deleteDoc'>
                  <i class='fas fa-trash'></i>
              </a>
            {{/unless}}
        </div>
        {{else}}
        <span>No Class Set!</span>
        {{/if}}
      {{/if}}
    </aside>

    <aside>
      <div class='flexrow'>
        <h5>Character Data</h5>
        <div>
            {{#if (eq @root.actor.type 'character')}}
              {{#if system.editLockers.dataEditLocked}}
                  <button type="button" class="icon toggle align-self-right" data-action='unlockDataEdit' {{disabled (not editable)}}><i class="fa-solid fa-pen-to-square"></i></button>
              {{else}}
                  <button type="button" class="icon toggle align-self-right" data-action='lockDataEdit'><i class="fa-solid fa-xmark"></i></button>
              {{/if}}
            {{/if}}
        </div>
      </div>
      <div class="grid grid-2col">
        {{#if (eq @root.actor.type 'character')}}
        <div>
          <label for="system.data.hpPerLevel">HP Per Level:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.data.hpPerLevel' name='system.data.hpPerLevel' value='{{system.data.hpPerLevel}}'/>
        </div>
        <div>
          <label for="system.data.additionalHp">Additional HP:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.data.additionalHp' name='system.data.additionalHp' value='{{system.data.additionalHp}}'/>
        </div>
        {{else}}
        <div>
          <label for="system.levels.level">Level</label>
          <input class='compact-input' type='number' id='system.levels.level' name='system.levels.level' value='{{system.levels.level}}'/>
        </div>
        <div>
          <label for="system.hp.max">HP</label>
          <input class='compact-input' type='number' id='system.hp.max' name='system.hp.max' value='{{system.hp.max}}'/>
        </div>
        {{/if}}

        <div>
          <label for="system.levels.martialProficency">Martial Level Prof.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.levels.martialProficency' name='system.levels.martialProficency' value='{{system.levels.martialProficency}}'/>
        </div>
        <div >
          <label for="system.levels.spellProficency">Spell Level Prof.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.levels.spellProficency' name='system.levels.spellProficency' value='{{system.levels.spellProficency}}'/>
        </div>

        <div>
          <label for="system.defenses.stabilityProficency">Stability Prof.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.defenses.stabilityProficency' name='system.defenses.stabilityProficency' value='{{system.defenses.stabilityProficency}}'/>
        </div>
        <div >
          <label for="system.defenses.dodgeProficency">Dodge Prof.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.defenses.dodgeProficency' name='system.defenses.dodgeProficency' value='{{system.defenses.dodgeProficency}}'/>
        </div>

        <div>
          <label for="system.defenses.toughnessProficency">Toughness Prof.:</label>
          <input {{disabled @root.system.editLockers.dataEditLocked}} class='compact-input' type='number' id='system.defenses.toughnessProficency' name='system.defenses.toughnessProficency' value='{{system.defenses.toughnessProficency}}'/>
        </div>
        <div >
